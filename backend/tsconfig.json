{
  "compilerOptions": {
    "target": "es2020",
    "module": "CommonJS",             // <-- ИЗМЕНИ ЭТО
    "moduleResolution": "Node",       // <-- Вот это исправление
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"]
  },
  "include": ["src/**/*"]
}